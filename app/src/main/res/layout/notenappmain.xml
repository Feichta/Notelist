<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:animateLayoutChanges="true"
    android:orientation="vertical"
    android:weightSum="1">

    <ListView
        android:id="@+id/notenappmain_liste"
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="47dp"
        android:clipToPadding="false"
        android:divider="@android:color/transparent"
        android:dividerHeight="13.0sp"
        android:paddingBottom="10dp"
        android:paddingTop="10dp"
        android:scrollbars="none" />

    <TextView
        android:id="@+id/notenappmain_durchschnittAlleFaecher"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:height="50dp"
        android:background="@color/average"
        android:gravity="left|center"
        android:paddingLeft="11dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/averageText"
        android:textSize="16dp"
        android:visibility="visible" />

    <Button
        android:id="@+id/notenappmain_neuesFach"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="24dp"
        android:layout_marginRight="18dp"
        android:background="@drawable/round_button"
        android:fontFamily="sans-serif-light"
        android:text="+"
        android:textColor="#585858"
        android:textSize="30dp" />

</RelativeLayout>